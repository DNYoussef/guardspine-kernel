{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://guardspine.dev/schemas/evidence-bundle.schema.json",
  "title": "EvidenceBundle",
  "description": "A tamper-evident collection of evidence items with hash-chain integrity.",
  "type": "object",
  "required": ["bundle_id", "version", "created_at", "items", "immutability_proof"],
  "properties": {
    "bundle_id": {
      "type": "string",
      "description": "Unique identifier for this bundle (UUID v4)."
    },
    "version": {
      "type": "string",
      "const": "0.1.0",
      "description": "Schema version."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of bundle creation."
    },
    "policy_id": {
      "type": "string",
      "description": "Optional reference to the policy pack used for evaluation."
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/EvidenceItem" }
    },
    "immutability_proof": {
      "$ref": "#/$defs/ImmutabilityProof"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "$defs": {
    "EvidenceItem": {
      "type": "object",
      "required": ["item_id", "content_type", "content", "content_hash", "sequence"],
      "properties": {
        "item_id": {
          "type": "string",
          "description": "Unique identifier for this item."
        },
        "content_type": {
          "type": "string",
          "description": "MIME-like type tag, e.g. guardspine/test-result."
        },
        "content": {
          "type": "object",
          "description": "Arbitrary structured content."
        },
        "content_hash": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]{64}$",
          "description": "SHA-256 hash of canonical JSON of content."
        },
        "sequence": {
          "type": "integer",
          "minimum": 0,
          "description": "Zero-based sequence number in the chain."
        }
      }
    },
    "ImmutabilityProof": {
      "type": "object",
      "required": ["hash_chain", "root_hash"],
      "properties": {
        "hash_chain": {
          "type": "array",
          "items": { "$ref": "#/$defs/HashChainLink" }
        },
        "root_hash": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]{64}$",
          "description": "SHA-256 hash of the concatenated chain hashes."
        },
        "signature": {
          "type": "string",
          "description": "Optional cryptographic signature over root_hash."
        }
      }
    },
    "HashChainLink": {
      "type": "object",
      "required": ["sequence", "content_hash", "previous_hash", "chain_hash"],
      "properties": {
        "sequence": {
          "type": "integer",
          "minimum": 0
        },
        "content_hash": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]{64}$"
        },
        "previous_hash": {
          "type": "string",
          "description": "Chain hash of the previous link, or 'genesis' for the first."
        },
        "chain_hash": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]{64}$",
          "description": "SHA-256 of (sequence + content_hash + previous_hash)."
        }
      }
    }
  }
}
